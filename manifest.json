{
    "manifest_version": 2,
  
    "name": "background-colorpeek",
    "version": "1.0",
    "description": "Get every background-color from the current tab.",
  
    "browser_action": {
            "default_title": "Test Extension",
            "default_popup": "popup.html"
    },
  
    "background": {
      "scripts": ["event.js"],
      "persistent": false
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["jquery-3.1.1.min.js"]
    }],
    
    "permissions": ["<all_urls>"]
  }